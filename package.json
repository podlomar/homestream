{
  "name": "homestream",
  "version": "1.0.0",
  "description": "A simple video streaming server for local network",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "dev": "tsc --watch",
    "start": "node --watch dist/server.js",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format src/",
    "format:fix": "biome format --write src/",
    "check": "biome check src/",
    "check:fix": "biome check --write src/"
  },
  "dependencies": {
    "@types/express": "^5.0.3",
    "express": "^4.18.2",
    "express-nunjucks": "^3.1.2",
    "nunjucks": "^3.2.4"
  },
  "keywords": [
    "video",
    "streaming",
    "express",
    "nodejs"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "@types/node": "^24.1.0",
    "typescript": "^5.8.3"
  }
}
